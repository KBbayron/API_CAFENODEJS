<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Invoice</title>
    <style>
        h3 {
            text-align: center;
            margin-top: 20px;
        }
        table {
            margin: 20px auto;
            width: 90%;
            font-family: Arial, sans-serif;
            border-collapse: collapse;
        }
        td, th {
            border: 1px solid #dddddd;
            text-align: left;
            padding: 8px;
        }
        th {
            background-color: #f2f2f2;
        }
    </style>
</head>
<body>
    <h3 style="text-align: center;">Cafe Management System</h3>
    <table>
        <tr>
            <th>Name: <%= name %></th>
            <th>Email: <%= email %></th>
        </tr>
        <tr>
            <th>Contact Number: <%= contactNumber %></th>
            <th>Payment Method: <%= paymentMethod %></th>
        </tr>
    </table>

    <h3>Product Details</h3>
    <table>
        <tr>
            <th>Name</th>
            <th>Category</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Sub Total</th>
        </tr>
        <% if(productDetails.length > 0) { %>
            <% productDetails.forEach(product => { %>
                <tr>
                    <td><%= product.name %></td>
                    <td><%= product.category %></td>
                    <td><%= product.quantity %></td>
                    <td><%= product.price %></td>
                    <td><%= product.total %></td>
                </tr>
            <% }); %>
        <% } else { %>
            <tr>
                <td colspan="5" style="text-align: center;">No hay productos en el pedido.</td>
            </tr>
        <% } %>
    </table>
    <h3>Total: <%= totalAmount %></h3>
    <h3 style="text-align: center;">Thank you for your purchase!</h3>
</body>
</html>
